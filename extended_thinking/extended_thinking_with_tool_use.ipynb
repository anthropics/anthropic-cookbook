    "def multiple_tool_calls_with_thinking():\n",
    "    # 도구들을 정의합니다.\n",
    "    tools = [\n",
    "        {\n",
    "            \"name\": \"weather\",\n",
    "            \"description\": \"특정 위치의 현재 날씨 정보를 가져옵니다.\",\n",
    "            \"input_schema\": {\n",
    "                \"type\": \"object\",\n",
    "                \"properties\": {\n",
    "                    \"location\": {\n",
    "                        \"type\": \"string\",\n",
    "                        \"description\": \"날씨 정보를 조회할 위치입니다.\"\n",
    "                    }\n",
    "                },\n",
    "                \"required\": [\"location\"]\n",
    "            }\n",
    "        },\n",
    "        {\n",
    "            \"name\": \"news\",\n",
    "            \"description\": \"특정 주제에 대한 최신 뉴스 헤드라인을 가져옵니다.\",\n",
    "            \"input_schema\": {\n",
    "                \"type\": \"object\",\n",
    "                \"properties\": {\n",
    "                    \"topic\": {\n",
    "                        \"type\": \"string\",\n",
    "                        \"description\": \"뉴스를 조회할 주제입니다.\"\n",
    "                    }\n",
    "                },\n",
    "                \"required\": [\"topic\"]\n",
    "            }\n",
    "        }\n",
    "    ]\n",
    "    \n",
    "    def weather(location):\n",
    "        # 모의 날씨 데이터\n",
    "        weather_data = {\n",
    "            \"New York\": {\"temperature\": 72, \"condition\": \"Sunny\"},\n",
    "            \"London\": {\"temperature\": 62, \"condition\": \"Cloudy\"},\n",
    "            \"Tokyo\": {\"temperature\": 80, \"condition\": \"Partly cloudy\"},\n",
    "            \"Paris\": {\"temperature\": 65, \"condition\": \"Rainy\"},\n",
    "            \"Sydney\": {\"temperature\": 85, \"condition\": \"Clear\"},\n",
    "            \"Berlin\": {\"temperature\": 60, \"condition\": \"Foggy\"},\n",
    "        }\n",
    "        \n",
    "        return weather_data.get(location, {\"error\": f\"{location}에 대한 날씨 정보가 없습니다.\"})\n",
    "    \n",
    "    def news(topic):\n",
    "        # 모의 뉴스 데이터를 생성합니다.\n",
    "        news_data = {\n",
    "            \"technology\": [\n",
    "                \"한 연구소에서 새로운 AI 혁신 기술 발표\",\n",
    "                \"기술 기업, 최신 스마트폰 모델 출시\",\n",
    "                \"양자 컴퓨팅, 중요한 이정표 달성\"\n",
    "            ],\n",
    "            \"sports\": [\n",
    "                \"지역 팀, 챔피언십 경기에서 우승\",\n",
    "                \"스타 플레이어, 기록적인 계약 체결\",\n",
    "                \"올림픽 위원회, 2036년 대회 개최 도시 발표\"\n",
    "            ],\n",
    "            \"weather\": [\n",
    "                \"대서양에서 폭풍 시스템 발달 중\",\n",
    "                \"유럽 전역에서 기록적인 고온 현상 발생\",\n",
    "                \"기후 과학자들, 새로운 연구 보고서 발표\"\n",
    "            ]\n",
    "        }\n",
    "        \n",
    "        return {\"headlines\": news_data.get(topic.lower(), [\"이 주제에 대한 뉴스는 현재 제공되지 않습니다.\"])}\n",
    "    \n",
    "    # 초기 요청을 보냅니다.\n",
    "    response = client.messages.create(\n",
    "        model=MODEL_NAME,\n",
    "        max_tokens=MAX_TOKENS,\n",
    "        thinking={\n",
    "                \"type\": \"enabled\",\n",
    "                \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "        },\n",
    "        tools=tools,\n",
    "        messages=[{\n",
    "            \"role\": \"user\",\n",
    "            \"content\": \"런던의 현재 날씨와 기술 관련 최신 뉴스를 알려주시겠어요?\"\n",
    "        }]\n",
    "    )\n",
    "    \n",
    "    # 초기 응답에 대한 상세 정보를 출력합니다.\n",
    "    print(\"\\n=== 초기 응답 ===\")\n",
    "    print(f\"응답 ID: {response.id}\")\n",
    "    print(f\"중지 이유: {response.stop_reason}\")\n",
    "    print(f\"모델: {response.model}\")\n",
    "    print(f\"콘텐츠 블록: {len(response.content)}개\")\n",
    "    \n",
    "    # 각 콘텐츠 블록을 출력합니다.\n",
    "    for i, block in enumerate(response.content):\n",
    "        print(f\"\\n블록 {i+1}: 유형 = {block.type}\")\n",
    "        if block.type == \"thinking\":\n",
    "            print(f\"사고 내용 일부: {block.thinking[:150]}...\")\n",
    "            print(f\"서명 사용 가능 여부: {bool(getattr(block, 'signature', None))}\")\n",
    "        elif block.type == \"text\":\n",
    "            print(f\"텍스트 내용: {block.text}\")\n",
    "        elif block.type == \"tool_use\":\n",
    "            print(f\"도구: {block.name}\")\n",
    "            print(f\"도구 입력: {block.input}\")\n",
    "            print(f\"도구 ID: {block.id}\")\n",
    "    print(\"=== 초기 응답 종료 ===\\n\")\n",
    "    \n",
    "    # 여러 도구 호출을 처리할 수 있도록 준비합니다.\n",
    "    full_conversation = [{\n",
    "        \"role\": \"user\",\n",
    "        \"content\": \"런던의 현재 날씨와 기술 관련 최신 뉴스를 알려주시겠어요?\"\n",
    "    }]\n",
    "    \n",
    "    # 다중 턴(multi-turn) 도구 사용을 위한 이터레이션 횟수를 추적합니다.\n",
    "    iteration = 0\n",
    "    \n",
    "    while response.stop_reason == \"tool_use\":\n",
    "        iteration += 1\n",
    "        print(f\"\\n=== 도구 사용 이터레이션 {iteration} ===\")\n",
    "        \n",
    "        # 대화 기록에 포함할 사고 블록 및 도구 사용 내용을 추출합니다.\n",
    "        assistant_blocks = []\n",
    "        for block in response.content:\n",
    "            if block.type in [\"thinking\", \"redacted_thinking\", \"tool_use\"]:\n",
    "                assistant_blocks.append(block)\n",
    "        \n",
    "        # 사고 블록 및 도구 사용 내용을 포함한 어시스턴트 응답을 추가합니다.\n",
    "        full_conversation.append({\n",
    "            \"role\": \"assistant\",\n",
    "            \"content\": assistant_blocks\n",
    "        })\n",
    "        \n",
    "        # tool_use 블록을 찾습니다.\n",
    "        tool_use_block = next((block for block in response.content if block.type == \"tool_use\"), None)\n",
    "        if tool_use_block:\n",
    "            print(f\"\\n=== 도구 실행 중 ===\")\n",
    "            print(f\"도구 이름: {tool_use_block.name}\")\n",
    "            \n",
    "            # 적절한 도구를 실행합니다.\n",
    "            if tool_use_block.name == \"weather\":\n",
    "                print(f\"조회할 위치: {tool_use_block.input['location']}\")\n",
    "                tool_result = weather(tool_use_block.input[\"location\"])\n",
    "            elif tool_use_block.name == \"news\":\n",
    "                print(f\"조회할 주제: {tool_use_block.input['topic']}\")\n",
    "                tool_result = news(tool_use_block.input[\"topic\"])\n",
    "            else:\n",
    "                tool_result = {\"error\": \"알 수 없는 도구입니다.\"}\n",
    "                \n",
    "            print(f\"결과: {tool_result}\")\n",
    "            print(\"=== 도구 실행 완료 ===\\n\")\n",
    "            \n",
    "            # 대화에 도구 결과를 추가합니다.\n",
    "            full_conversation.append({\n",
    "                \"role\": \"user\",\n",
    "                \"content\": [{\n",
    "                    \"type\": \"tool_result\",\n",
    "                    \"tool_use_id\": tool_use_block.id,\n",
    "                    \"content\": json.dumps(tool_result, ensure_ascii=False) # 한국어 출력을 위해 ensure_ascii=False 추가\n",
    "                }]\n",
    "            })\n",
    "            \n",
    "            # 대화를 계속합니다.\n",
    "            print(\"\\n=== 도구 결과와 함께 후속 요청을 전송합니다 ===\")\n",
    "            response = client.messages.create(\n",
    "                model=MODEL_NAME,\n",
    "                max_tokens=MAX_TOKENS,\n",
    "                thinking={\n",
    "                        \"type\": \"enabled\",\n",
    "                        \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "                },\n",
    "                tools=tools,\n",
    "                messages=full_conversation\n",
    "            )\n",
    "            \n",
    "            # 후속 응답의 세부 정보를 출력합니다.\n",
    "            print(f\"\\n=== 후속 응답 (이터레이션 {iteration}) ===\")\n",
    "            print(f\"응답 ID: {response.id}\")\n",
    "            print(f\"중지 이유: {response.stop_reason}\")\n",
    "            print(f\"콘텐츠 블록: {len(response.content)}개\")\n",
    "            \n",
    "            for i, block in enumerate(response.content):\n",
    "                print(f\"\\n블록 {i+1}: 유형 = {block.type}\")\n",
    "                if block.type == \"thinking\":\n",
    "                    print(f\"사고 내용 미리보기: {block.thinking[:100]}...\")\n",
    "                elif block.type == \"text\":\n",
    "                    print(f\"텍스트 내용 미리보기: {block.text[:100]}...\")\n",
    "                elif block.type == \"tool_use\":\n",
    "                    print(f\"도구: {block.name}\")\n",
    "                    print(f\"도구 입력 미리보기: {str(block.input)[:100]}\")\n",
    "            print(f\"=== 후속 응답 종료 (이터레이션 {iteration}) ===\\n\")\n",
    "            \n",
    "            if response.stop_reason != \"tool_use\":\n",
    "                print(\"\\n=== 최종 응답 ===\")\n",
    "                print_thinking_response(response)\n",
    "                print(\"=== 최종 응답 종료 ===\")\n",
    "        else:\n",
    "            print(\"응답에서 tool_use 블록을 찾을 수 없습니다.\")\n",
    "            break\n",
    "\n",
    "# 예제를 실행합니다.\n",
    "multiple_tool_calls_with_thinking()"
   ]
  },
