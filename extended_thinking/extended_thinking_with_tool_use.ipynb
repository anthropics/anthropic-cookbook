   "source": [
    "import anthropic\n",
    "import os\n",
    "import json\n",
    "\n",
    "# 모델 및 토큰 예산 설정을 위한 전역 변수\n",
    "MODEL_NAME = \"claude-3-7-sonnet-20250219\"\n",
    "MAX_TOKENS = 4000\n",
    "THINKING_BUDGET_TOKENS = 2000\n",
    "\n",
    "# API 키는 환경 변수로 설정하거나 코드에 직접 입력해 주십시오.\n",
    "# os.environ[\"ANTHROPIC_API_KEY\"] = \"your_api_key_here\"\n",
    "\n",
    "# 클라이언트를 초기화합니다.\n",
    "client = anthropic.Anthropic()\n",
    "\n",
    "# 도우미 함수\n",
    "def print_thinking_response(response):\n",
    "    \"\"\"사고 블록을 포함하는 메시지 응답을 가독성 좋게 출력합니다.\"\"\"\n",
    "    print(\"\\n==== 전체 응답 ====\")\n",
    "    for block in response.content:\n",
    "        if block.type == \"thinking\":\n",
    "            print(\"\\n🧠 사고 블록:\")\n",
    "            # 가독성을 위해 일부만 표시된 사고 내용입니다. \n",
    "            print(block.thinking[:500] + \"...\" if len(block.thinking) > 500 else block.thinking)\n",
    "            print(f\"\\n[서명 사용 가능 여부: {bool(getattr(block, 'signature', None))}]\")\n",
    "            if hasattr(block, 'signature') and block.signature:\n",
    "                print(f\"[서명 (처음 50자): {block.signature[:50]}...]\")\n",
    "        elif block.type == \"redacted_thinking\":\n",
    "            print(\"\\n🔒 수정된 사고 블록:\")\n",
    "            print(f\"[데이터 길이: {len(block.data) if hasattr(block, 'data') else 'N/A'}]\")\n",
    "        elif block.type == \"text\":\n",
    "            print(\"\\n✓ 최종 답변:\")\n",
    "            print(block.text)\n",
    "    \n",
    "    print(\"\\n==== 응답 종료 ====\")\n",
    "\n",
    "def count_tokens(messages, tools=None):\n",
    "    \"\"\"주어진 메시지 목록과 (선택적으로) 도구 목록을 사용하여 토큰 수를 계산합니다.\"\"\""
    "    if tools:\n",
    "        response = client.messages.count_tokens(\n",
    "            model=MODEL_NAME,\n",
    "            messages=messages,\n",
    "            tools=tools\n",
    "        )\n",
    "    else:\n",
    "        response = client.messages.count_tokens(\n",
    "            model=MODEL_NAME,\n",
    "            messages=messages\n",
    "        )\n",
    "    return response.input_tokens"
   ]
