    "def thinking_block_preservation_example():\n",
    "    # 간단한 날씨 도구를 정의합니다.\n",
    "    tools = [\n",
    "        {\n",
    "            \"name\": \"weather\",\n",
    "            \"description\": \"특정 위치의 현재 날씨 정보를 가져옵니다.\",\n",
    "            \"input_schema\": {\n",
    "                \"type\": \"object\",\n",
    "                \"properties\": {\n",
    "                    \"location\": {\n",
    "                        \"type\": \"string\",\n",
    "                        \"description\": \"날씨 정보를 조회할 위치입니다.\"\n",
    "                    }\n",
    "                },\n",
    "                \"required\": [\"location\"]\n",
    "            }\n",
    "        }\n",
    "    ]\n",
    "    \n",
    "    def weather(location):\n",
    "        # 모의 날씨 데이터\n",
    "        weather_data = {\n",
    "            \"New York\": {\"temperature\": 72, \"condition\": \"Sunny\"},\n",
    "            \"London\": {\"temperature\": 62, \"condition\": \"Cloudy\"},\n",
    "            \"Tokyo\": {\"temperature\": 80, \"condition\": \"Partly cloudy\"},\n",
    "            \"Paris\": {\"temperature\": 65, \"condition\": \"Rainy\"},\n",
    "            \"Sydney\": {\"temperature\": 85, \"condition\": \"Clear\"},\n",
    "            \"Berlin\": {\"temperature\": 60, \"condition\": \"Foggy\"},\n",
    "        }\n",
    "        \n",
    "        return weather_data.get(location, {\"error\": f\"{location}에 대한 날씨 정보가 없습니다.\"})\n",
    "    \n",
    "    # 도구 사용 및 확장된 사고를 포함한 초기 요청을 보냅니다.\n",
    "    response = client.messages.create(\n",
    "        model=MODEL_NAME,\n",
    "        max_tokens=MAX_TOKENS,\n",
    "        thinking={\n",
    "            \"type\": \"enabled\",\n",
    "            \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "        },\n",
    "        tools=tools,\n",
    "        messages=[{\n",
    "            \"role\": \"user\",\n",
    "            \"content\": \"현재 베를린 날씨는 어떤가요?\"\n",
    "        }]\n",
    "    )\n",
    "    \n",
    "    # 응답에서 블록들을 추출합니다.\n",
    "    thinking_blocks = [b for b in response.content if b.type == \"thinking\"]\n",
    "    tool_use_blocks = [b for b in response.content if b.type == \"tool_use\"]\n",
    "    \n",
    "    print(\"\\n=== 초기 응답 ===\")\n",
    "    print(f\"응답에 포함된 내용:\")\n",
    "    print(f\"- 사고 블록 {len(thinking_blocks)}개\")\n",
    "    print(f\"- 도구 사용 블록 {len(tool_use_blocks)}개\")\n",
    "    \n",
    "    # 도구 사용이 트리거되었는지 확인합니다.\n",
    "    if tool_use_blocks:\n",
    "        tool_block = tool_use_blocks[0]\n",
    "        print(f\"\\n호출된 도구: {tool_block.name}\")\n",
    "        print(f\"조회할 위치: {tool_block.input['location']}\")\n",
    "        \n",
    "        # 도구를 실행합니다.\n",
    "        tool_result = weather(tool_block.input[\"location\"])\n",
    "        print(f\"도구 결과: {tool_result}\")\n",
    "        \n",
    "        # 첫 번째 테스트: 사고 블록 없이 시도합니다.\n",
    "        print(\"\\n=== 테스트 1: 사고 블록이 없는 경우 ===\")\n",
    "        try:\n",
    "            # 여기서 `thinking_blocks`가 아닌 `tool_use_blocks`만 포함하고 있음에 유의하십시오.\n",
    "            partial_blocks = tool_use_blocks\n",
    "            \n",
    "            incomplete_response = client.messages.create(\n",
    "                model=MODEL_NAME,\n",
    "                max_tokens=MAX_TOKENS,\n",
    "                thinking={\n",
    "                        \"type\": \"enabled\",\n",
    "                        \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "                },\n",
    "                tools=tools,\n",
    "                messages=[\n",
    "                    {\"role\": \"user\", \"content\": \"현재 베를린 날씨는 어떤가요?\"},\n",
    "                    {\"role\": \"assistant\", \"content\": partial_blocks},\n",
    "                    {\"role\": \"user\", \"content\": [{\n",
    "                        \"type\": \"tool_result\",\n",
    "                        \"tool_use_id\": tool_block.id,\n",
    "                        \"content\": json.dumps(tool_result)\n",
    "                    }]}\n",
    "                ]\n",
    "            )\n",
    "            print(\"성공: 사고 블록 없이 응답을 수신했습니다. (예상치 못한 결과)\")\n",
