    "def tool_use_with_thinking():\n",
    "    # 날씨 도구를 정의합니다.\n",
    "    tools = [\n",
    "        {\n",
    "            \"name\": \"weather\",\n",
    "            \"description\": \"특정 위치의 현재 날씨 정보를 가져옵니다.\",\n",
    "            \"input_schema\": {\n",
    "                \"type\": \"object\",\n",
    "                \"properties\": {\n",
    "                    \"location\": {\n",
    "                        \"type\": \"string\",\n",
    "                        \"description\": \"날씨 정보를 조회할 위치입니다.\"\n",
    "                    }\n",
    "                },\n",
    "                \"required\": [\"location\"]\n",
    "            }\n",
    "        }\n",
    "    ]\n",
    "    \n",
    "    def weather(location):\n",
    "        # 모의 날씨 데이터\n",
    "        weather_data = {\n",
    "            \"New York\": {\"temperature\": 72, \"condition\": \"Sunny\"},\n",
    "            \"London\": {\"temperature\": 62, \"condition\": \"Cloudy\"},\n",
    "            \"Tokyo\": {\"temperature\": 80, \"condition\": \"Partly cloudy\"},\n",
    "            \"Paris\": {\"temperature\": 65, \"condition\": \"Rainy\"},\n",
    "            \"Sydney\": {\"temperature\": 85, \"condition\": \"Clear\"},\n",
    "            \"Berlin\": {\"temperature\": 60, \"condition\": \"Foggy\"},\n",
    "        }\n",
    "        \n",
    "        return weather_data.get(location, {\"error\": f\"{location}에 대한 날씨 정보가 없습니다.\"})\n",
    "    \n",
    "    # 도구 사용 및 확장된 사고를 포함한 초기 요청\n",
    "    response = client.messages.create(\n",
    "        model=MODEL_NAME,\n",
    "        max_tokens=MAX_TOKENS,\n",
    "        thinking={\n",
    "            \"type\": \"enabled\",\n",
    "            \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "        },\n",
    "        tools=tools,\n",
    "        messages=[{\n",
    "            \"role\": \"user\",\n",
    "            \"content\": \"오늘 파리 날씨는 어떤가요? 알려주세요.\"\n",
    "        }]\n",
    "    )\n",
    "    \n",
    "    # 초기 응답에 대한 상세 진단 정보를 출력합니다.\n",
    "    print(\"\\n=== 초기 응답 ===\")\n",
    "    print(f\"응답 ID: {response.id}\")\n",
    "    print(f\"중지 이유: {response.stop_reason}\")\n",
    "    print(f\"모델: {response.model}\")\n",
    "    print(f\"콘텐츠 블록: {len(response.content)}개 블록\")\n",
    "    \n",
    "    for i, block in enumerate(response.content):\n",
    "        print(f\"\\n블록 {i+1}: 유형 = {block.type}\")\n",
    "        if block.type == \"thinking\":\n",
    "            print(f\"사고 내용 일부: {block.thinking[:150]}...\")\n",
    "            print(f\"서명 사용 가능 여부: {bool(getattr(block, 'signature', None))}\")\n",
    "        elif block.type == \"text\":\n",
    "            print(f\"텍스트 내용: {block.text}\")\n",
    "        elif block.type == \"tool_use\":\n",
    "            print(f\"도구: {block.name}\")\n",
    "            print(f\"도구 입력: {block.input}\")\n",
    "            print(f\"도구 ID: {block.id}\")\n",
    "    print(\"=== 초기 응답 종료 ===\\n\")\n",
    "    \n",
    "    # 대화 기록에 포함할 사고 블록을 추출합니다.\n",
    "    assistant_blocks = []\n",
    "    for block in response.content:\n",
    "        if block.type in [\"thinking\", \"redacted_thinking\", \"tool_use\"]:\n",
    "            assistant_blocks.append(block)\n",
    "            \n",
    "    # 필요한 경우 도구 사용을 처리합니다.\n",
    "    full_conversation = [{\n",
    "        \"role\": \"user\",\n",
    "        \"content\": \"오늘 파리 날씨는 어떤가요? 알려주세요.\"\n",
    "    }]\n",
    "    \n",
    "    if response.stop_reason == \"tool_use\":\n",
    "        # 사고 블록 및 도구 사용을 포함한 전체 어시스턴트 응답을 추가합니다.\n",
    "        full_conversation.append({\n",
    "            \"role\": \"assistant\",\n",
    "            \"content\": assistant_blocks\n",
    "        })\n",
    "        \n",
    "        # tool_use 블록을 찾습니다.\n",
    "        tool_use_block = next((block for block in response.content if block.type == \"tool_use\"), None)\n",
    "        if tool_use_block:\n",
    "            # 도구를 실행합니다.\n",
    "            print(f\"\\n=== 도구 실행 중 ===\")\n",
    "            print(f\"도구 이름: {tool_use_block.name}\")\n",
    "            print(f\"조회할 위치: {tool_use_block.input['location']}\")\n",
    "            tool_result = weather(tool_use_block.input[\"location\"])\n",
    "            print(f\"결과: {tool_result}\")\n",
    "            print(\"=== 도구 실행 완료 ===\\n\")\n",
    "            \n",
    "            # 대화에 도구 결과를 추가합니다.\n",
    "            full_conversation.append({\n",
    "                \"role\": \"user\",\n",
    "                \"content\": [{\n",
    "                    \"type\": \"tool_result\",\n",
    "                    \"tool_use_id\": tool_use_block.id,\n",
    "                    \"content\": json.dumps(tool_result)\n",
    "                }]\n",
    "            })\n",
    "            \n",
    "            # 동일한 사고 구성을 사용하여 대화를 계속합니다.\n",
    "            print(\"\\n=== 도구 결과와 함께 후속 요청 전송 중 ===\")\n",
    "            response = client.messages.create(\n",
    "                model=MODEL_NAME,\n",
    "                max_tokens=MAX_TOKENS,\n",
    "                thinking={\n",
    "                    \"type\": \"enabled\",\n",
    "                    \"budget_tokens\": THINKING_BUDGET_TOKENS\n",
    "                },\n",
    "                tools=tools,\n",
    "                messages=full_conversation\n",
    "            )\n",
    "            print(f\"후속 응답 수신됨. 중지 이유: {response.stop_reason}\")\n",
    "    \n",
    "    print_thinking_response(response)\n",
    "\n",
    "# 예제를 실행합니다.\n",
    "tool_use_with_thinking()"
   ]
